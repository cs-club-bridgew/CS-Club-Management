    }
    .logo{
        width: 2in;
        display: inline
    }
    .retAddr{
        position: absolute;
        top:.5in;
        right: 1in;
    }
    .top1{
        border: .01in solid crimson;
        border-top: .03in solid Crimson;
        margin-bottom: -6px;
        width: 8.5in;
    }
    .top2{
        border: .01in solid black;
        width: 8.5in;

    }
    h1.hr_text{
        position:absolute;
        font-style: italic;
        background-color: white;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 23pt;
        top: 1.57in;
        text-transform: uppercase;
        {% comment %} outline: 1px solid black; {% endcomment %}
        padding: 3px;
        text-align:center;
        
        {% if type=="sga_budget" %}
            width: 220px;
            left: 5in;
        {% else %}
            width: 144px;
            left: 6in;
        {% endif %}
    }
    fieldset{
        width: 30%;
    }
    html{
        height: 11in;
        width: 8in;
    }
    
    td{
        padding: 4px;
    }
    table, td, th {
        border: 1px solid black;
        text-align: center;
        border-collapse: collapse;
        text-transform: capitalize
    }
    tr{
        margin:10px;
    }
    .InvInfo{
        width: 100%;
    }
    .items{
        margin-top: .1in;
        width: 100%;
    }

    .bot1{
        position: absolute;
        bottom: 0.5in;
        border: .01in solid crimson;
        border-top: .03in solid crimson;
        margin-bottom: -6px;
        width: 8.5in;
    }
    .bot2{
        position: absolute;
        bottom: 0.45in;
        margin-bottom: -6px;
        border: .01in solid black;
        width: 8.5in;

    }
    th, td, tr{
        text-transform: | capitalize;

    }
</style>
</html>